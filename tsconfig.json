{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nodeplotlib/interfaces": ["libs/interfaces/src/index.ts"],
      "@nodeplotlib/pages": ["libs/pages/src/index.ts"],
      "@nodeplotlib/nodeplotlib": ["libs/nodeplotlib/src/index.ts"],
      "@nodeplotlib/shared-data": ["libs/shared-data/src/index.ts"],
      "@nodeplotlib/reactive-entity-store": [
        "libs/reactive-entity-store/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
